{% extends "base.html.twig" %}
{% block title %}
    Sub category {{ subCategory.name }}
{% endblock %}
{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('homepage') }}">Home</a></li>
        <li class="breadcrumb-item"><a
                    href="{{ path('product_category',{'slug':subCategory.category.slug}) }}">{{ subCategory.category.name }}</a>
        </li>
        <li class="breadcrumb-item active"><a>{{ subCategory.name }}</a></li>
    </ol>
    <h2> {{ subCategory.name }}</h2>

    <div class="container">
        <div class="row">
            {% for p in subCategory.products %}
                <div class="col-4">
                    {% include "product/_product_card.html.twig" %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
